{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@cs-forms/shared": ["../../packages/shared"]
    },
    "moduleResolution": "Node"
  },
  "include": ["index.ts", "store.ts"],
  "exclude": ["node_modules"]
}
